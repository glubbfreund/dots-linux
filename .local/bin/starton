#!/bin/bash
# ~/.local/bin/starton

COMMAND="$1"
DESKTOP="$2"
ARG="$3"

echo $COMMAND
echo $DESKTOP
echo $ARG

if [ -z "$COMMAND" ] || [ -z "$DESKTOP" ]; then
    echo "Usage: $0 <command> <desktop-number> [argument]"
    exit 1
else
    wmctrl -s "$DESKTOP"
    if ! pgrep -x "$COMMAND" > /dev/null; then
        "$COMMAND" "$ARG" &
    fi
fi
