#!/bin/bash
# ~/.local/bin/startbrave

wmctrl -s 1
if ! wmctrl -lx | grep -i 'brave-browser' | grep -vi 'WhatsApp Web' > /dev/null; then
    brave-browser-stable --no-default-browser-check --hide-crash-restore-bubble "$1" &
else
    if [[ -n "$1" ]];then
	brave-browser-stable --no-default-browser-check --hide-crash-restore-bubble "$1" &
    fi
fi
