#!/bin/bash
# ~/.local/bin/gpu_hyb

[ "$(supergfxctl -g)" = "AsusMuxDgpu" ] && yad --title="MUX-Steuerung" --text="\n Zum Hybridmodus umschalten und neu starten? \n" && supergfxctl -m Hybrid && xfce4-session-logout --reboot ||  [ $(supergfxctl -g) != "Hybrid" ] && yad --title="MUX-Steuerung" --text="\n Zum Hybridmodus umschalten? \n" && ([ "$(supergfxctl -g)" != "AsusMuxDgpu" ] && supergfxctl -m Hybrid && xfce4-session-logout --logout)
